<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/repo_title_tv"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/repo_name_content_description"
        tools:text="Nome do RepositÃ³rio"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/repo_description_tv"
        style="@style/Text.Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/repo_desc_content_description"
        android:ellipsize="end"
        android:maxLines="@integer/card_description_max_lines"
        tools:text="@tools:sample/lorem/random" />

    <include
        android:id="@+id/repo_stats_include"
        android:visibility="gone"
        layout="@layout/item_repo_stats" />

</LinearLayout>