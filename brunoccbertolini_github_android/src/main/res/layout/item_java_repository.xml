<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/elevation_detail"
    android:layout_margin="@dimen/horizontal_margin_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/vertical_margin_small"
        android:paddingHorizontal="@dimen/horizontal_margin_medium"
        android:orientation="horizontal">

        <include
            android:id="@+id/repo_data_include"
            layout="@layout/item_repo_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <include
            android:id="@+id/repo_user_include"
            layout="@layout/item_repos_list_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</androidx.cardview.widget.CardView>