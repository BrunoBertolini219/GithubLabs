<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/horizontal_margin_detail"
    android:elevation="@dimen/elevation_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/vertical_margin_small"
        android:paddingHorizontal="@dimen/horizontal_margin_medium"
        android:orientation="vertical">

        <include
            android:id="@+id/repo_detail_data_include"
            layout="@layout/item_repo_data" />

        <include
            android:id="@+id/repo_detail_username_include"
            layout="@layout/item_repo_detail_username" />

    </LinearLayout>
</androidx.cardview.widget.CardView>