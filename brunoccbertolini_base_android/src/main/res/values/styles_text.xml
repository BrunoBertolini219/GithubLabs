<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="Text.Title" parent="Text">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textColor">@color/colorTextAuxiliary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Description" parent="Text">
        <item name="android:textSize">@dimen/text_description_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Username" parent="Text">
        <item name="android:textSize">@dimen/text_description_size</item>
        <item name="android:textColor">@color/colorTextAuxiliary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Stats" parent="Text">
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>